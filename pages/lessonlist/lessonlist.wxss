.lesson{
  margin-top: 30rpx;
}

.lesson-list {
  justify-content: center;
  margin:0 auto;
  width: 90%;
  position: relative;
  background-color: #fff;
  border: 2px solid rgb(75, 75, 75);
  border-radius: 10px;
  margin-top: 15rpx;
}

.lesson_today_text {
  position: relative;
  color: rgb(15, 15, 15);
}

.lesson-list-photo{
  width: 500rpx;
  height: 300rpx;
  border-radius: 20rpx;
}

.lesson-list-desc{
  display: block;
  background-color: #000;
  color: #fff;
  position: absolute;
  bottom: 0%;
  left: 0;
  width: 97.5%;
  text-align: center;
  font-size: 25rpx;
  padding: 10rpx;
  opacity: 0.7;
  border-radius: 10rpx;
}

.must {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  font-size: 25rpx;
}

.date-count {
  position: absolute;
  right: 15rpx;
  top: 90rpx;
  background:#f5a614;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 23rpx;
}

.date-count-text {
  color: #fff;
}

.start {
  position: absolute;
  right: 15rpx;
  top: 170rpx;
  background-color: #fff;
  border: 1px solid #f5a614;
  padding: 8rpx 23rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #f5a614;
}

.icon-small
{
    display: inline-block;
    vertical-align: top;
    width: 1px;
    height:150px;
}