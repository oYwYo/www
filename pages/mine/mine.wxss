.category_bg {
  position: relative;
  background-color: #fff;
  height: 70rpx;
  border-radius: 50rpx;
  align-items: center;
}

.logo {
  position: relative;
  text-align: center;
  width: 30rpx;
  line-height: 100rpx;
  align-items: center;
  height: 30rpx;
  z-index: 2;
}

.icon {
  position: relative;
  text-align: center;
  align-items: center;
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.icon-text-container{
  display: flex;
  align-items: center;
}

.line1 {
  background-color: rgb(158, 158, 158);
  height: 2px;
}

.line2 {
  margin-top: 35rpx;
  background-color: rgb(226, 226, 226);
  height: 1px;
}