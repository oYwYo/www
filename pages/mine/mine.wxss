.user-container {
  background-image: url(../images/test);
  background-size: 100% 100%;
  padding-top: 50rpx; 
  padding-bottom: 50rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  background-color: #f3f6fc;
}

.user-info {
  margin: auto;
  flex-direction: row;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 100rpx;
  border: 2px solid #f5a614;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  margin-top: 4%;
  font-size: 35rpx;
  text-align: center;
}

.menu_bg {
  justify-content: center;
  margin:0 auto;
  width: 85%;
  position: relative;
  background-color: #fff;
}

.category_text {
  position: relative;
  left: 30rpx;
  font-size: 30rpx;
  color: rgb(15, 15, 15);
}

.menu_item {
  justify-content: space-between;
  display: flex;
  line-height: 100rpx;
  flex-direction: row;
  margin: 10rpx;
}

