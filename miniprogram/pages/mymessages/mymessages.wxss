.user-container {
  background-image: url('https://lostandfoundv2.yiwangchunyu.wang/media/dynamic/2021/2/28/20210228165012_31561.jpg');
  background-size: 100% 100%;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  background-color: #f3f6fc;
}

.user-info {
  margin: auto;
  flex-direction: row;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 230rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 100rpx;
  border: 2px solid #f5a614;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 23rpx;
}

.userinfo-nickname {
  font-size: 32rpx;
  text-align: center;
  color: rgb(65, 65, 65);
}

.line1 {
  background-color: rgb(158, 158, 158);
  height: 2px;
}